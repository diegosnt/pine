// Par√°metros del MACD (valores est√°ndar)
fast_length = input.int(12, "R√°pida (EMA)", minval=1, group="MACD")
slow_length = input.int(26, "Lenta (EMA)", minval=1, group="MACD")
signal_length = input.int(9, "Se√±al (EMA)", minval=1, group="MACD")

// Opciones de visualizaci√≥n
show_signals = input.bool(true, "Mostrar Se√±ales de Compra/Venta", group="Visualizaci√≥n")
show_crosses = input.bool(true, "Mostrar Cruces de L√≠nea Cero", group="Visualizaci√≥n")
show_table = input.bool(true, "Mostrar Tabla de Estado", group="Visualizaci√≥n")
show_background = input.bool(false, "Fondo de Tendencia", group="Visualizaci√≥n")

// Alertas
enable_alerts = input.bool(true, "Activar Alertas", group="Alertas")

// Colores
color_macd = input.color(#2962FF, "L√≠nea MACD", group="Colores")
color_signal = input.color(#FF6D00, "L√≠nea Signal", group="Colores")
color_hist_positive = input.color(#00BCD4, "Histograma Positivo (Cian)", group="Colores")
