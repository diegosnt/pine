     shape.triangleup, location.bottom, color.new(color.green, 0),
     size=size.small, text="COMPRA")

plotshape(show_signals and bearish_cross, "Se√±al Venta",
     shape.triangledown, location.top, color.new(color.red, 0),
     size=size.small, text="VENTA")

// Cruces de l√≠nea cero (m√°s sutiles)
plotshape(show_crosses and zero_cross_up, "Cruce Cero ‚Üë",
     shape.circle, location.bottom, color.new(color.lime, 30),
     size=size.tiny)

plotshape(show_crosses and zero_cross_down, "Cruce Cero ‚Üì",
     shape.circle, location.top, color.new(color.maroon, 30),
     size=size.tiny)

// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
// TABLA DE ESTADO
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

if show_table and barstate.islast
    // Crear tabla en esquina superior derecha
    var table status_table = table.new(position.top_right, 2, 5,
         border_width=1,
         border_color=color.gray,
         frame_width=1,
         frame_color=color.gray)

    // Header
    table.cell(status_table, 0, 0, "MACD Estado",
         text_color=color.white,
         bgcolor=color.new(color.blue, 20),
         text_size=size.normal)
    table.merge_cells(status_table, 0, 0, 1, 0)

    // Tendencia
    trend_text = is_bullish ? "ALCISTA ‚Üë" : "BAJISTA ‚Üì"
    trend_color = is_bullish ? color.new(color.green, 70) : color.new(color.red, 70)

    table.cell(status_table, 0, 1, "Tendencia",
         text_color=color.white,
         bgcolor=color.new(color.gray, 50),
         text_size=size.normal)
    table.cell(status_table, 1, 1, trend_text,
         text_color=color.white,
         bgcolor=trend_color,
         text_size=size.normal)

    // Momentum
    momentum_text = is_positive ? "POSITIVO +" : "NEGATIVO -"
    momentum_color = is_positive ? color.new(color.green, 70) : color.new(color.red, 70)

    table.cell(status_table, 0, 2, "Momentum",
         text_color=color.white,
         bgcolor=color.new(color.gray, 50),
         text_size=size.normal)
    table.cell(status_table, 1, 2, momentum_text,
         text_color=color.white,
         bgcolor=momentum_color,
         text_size=size.normal)

    // Valores actuales
    table.cell(status_table, 0, 3, "MACD",
         text_color=color.white,
         bgcolor=color.new(color.gray, 50),
         text_size=size.small)
    table.cell(status_table, 1, 3, str.tostring(macd, "#.##"),
         text_color=color.white,
         bgcolor=color.new(color.gray, 80),
         text_size=size.small)

    table.cell(status_table, 0, 4, "Histograma",
         text_color=color.white,
         bgcolor=color.new(color.gray, 50),
         text_size=size.small)
    table.cell(status_table, 1, 4, str.tostring(histogram, "#.##"),
         text_color=color.white,
         bgcolor=hist_color,
         text_size=size.small)

// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
// ALERTAS
// ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

